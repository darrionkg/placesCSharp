@using Places.Models;

<h1>Places you've been</h1>
<ul>

  @if(Model.Count == 0)
  {
    <p>You have no places in your Places List</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (Place place in Model)
    {
      <li><a href='/places/@place.GetId()'>@place.GetDescription()</a></li>
    }
  }

</ul>
<a href="/places/new">Add a new place you've been.</a>

<form action="/places/delete" method="post">
  <button type="submit" name="button">Clear All Places</button>
</form>
