@using Places.Models;

<h1>Places you've been</h1>
<ul>

  @if(Model.Count == 0)
  {
    <p>You have no places in your Places List</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (Place place in Model)
    {
      <li>@place.GetDescription()</li>
    }
  }
  
</ul>
<a href="/places/new">Add a new place you've been.</a>
